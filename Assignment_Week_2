package Week2.day1;

import org.openqa.selenium.By;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.support.ui.Select;

public class Assignment_1_Facebook {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		
		//Launch the chromebrowser
		ChromeDriver driver= new ChromeDriver();
		
		//Load the URL https://en-gb.facebook.com/
		driver.get("https://en-gb.facebook.com/");
		
		//Add implicit wait
				driver.manage().timeouts().implicitlyWait(java.time.Duration.ofSeconds(30));
				
		
		//Maximise the window
		driver.manage().window().maximize();
		
		
		
		//Click on Create New Account button
		driver.findElement(By.xpath("//a[contains(text(),'account')]")).click();
		
		driver.findElement(By.xpath("//input[@id='email']")).sendKeys("greatone");
		
		
		//Enter the first name	
		
		//driver.findElement(By.xpath("//input[contains(@id,'Raj')]"));
		driver.findElement(By.name("firstname")).sendKeys("Raj");
		
		//Enter the last name
		driver.findElement(By.name("lastname")).sendKeys("m");
		
		//Enter the mobile number
		driver.findElement(By.name("reg_email__")).sendKeys("9999999999");
		
		//Enterthe password
		driver.findElement(By.id("password_step_input")).sendKeys("rajan");
		
		//select step
	WebElement op = driver.findElement(By.id("day"));
	
	Select options = new Select (op);
	
	//Select by index
	options.selectByIndex(0);
	
	WebElement op1 = driver.findElement(By.id("month"));
	
	Select options1 = new Select (op1);
	
	options1.selectByIndex(0);
	
	
	
	//Attribute Xpath
	driver.findElement(By.xpath("(//input[@type='radio'])[2]")).click();
	
	
	
	
	
	
	
	
	
		
		

	}

}
